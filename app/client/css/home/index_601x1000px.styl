@media (min-width: 601px) and (max-width: 1000px)
  .content-wrapper h3
    font-size 1.9em

  .grid-module
    .sm-span-1
      width 8.33333%
    .sm-span-2
      width 16.66667%
    .sm-span-3
      width 25%
    .sm-span-4
      width 33.33333%
    .sm-span-5
      width 41.66667%
    .sm-span-6
      width 50%
    .sm-span-7
      width 58.33333%
    .sm-span-8
      width 66.66667%
    .sm-span-9
      width 75%
    .sm-span-10
      width 83.33333%
    .sm-span-11
      width 91.66667%
    .sm-span-12
      width 100%
    .col
      &.sm-span-6
        &:nth-child(odd)
          padding 1.5% 1.5% 1.5% 3%
        &:nth-child(even)
          padding 1.5% 3% 1.5% 1.5%
      &.sm-span-12
        padding 1.5% 3% 1.5% 3%
      &.sm-span-12
        padding-top 2.5%
        &:first-of-type
          padding-top 0
      &.sm-no-padding
        padding 0
    .sm-grid2x1
      padding-bottom 48.10127%
      .content-wrapper
        width 50%
        float left
        padding 5.5%
        &:after
          display none
    .sm-grid3x1
      padding-bottom 24%
    .sm-grid-nopicture
      padding-bottom 50%

  .grid2x1
    padding-bottom 48.10127%
    font-size 1em
    .img-wrapper:after
      border-bottom 15px solid transparent
      border-top 15px solid transparent
      border-right 15px solid #fff
      content ""
      height 0
      position absolute
      right -1px
      top 25px
      width 0
      .images-wrapper, .content-wrapper
        float left
    .images-wrapper
      float left
      width 48.10%
      &:after
        position absolute
        content ' '
        width 0px
        height 0px
        right 0
        top 30px
        border-width 14px 13px
        border-style solid
        border-color transparent #fff transparent transparent
    .content-wrapper
      width 51.90%
      float left
      padding 4%

  .sm-grid3x1
    .images-wrapper
      width 48.10%
      float left
      &:after
        position absolute
        content ' '
        width 0px
        height 0px
        right 0
        top 30px
        border-width 14px 13px
        border-style solid
        border-color transparent #fff transparent transparent

  #flow01, #flow002
    .grid2x1
      .content-wrapper
        padding-top 3%
        h3
          margin-bottom 1em

  #flow002
    #index-bot
      .sm-span-12:first-of-type
        padding-top 2.5%

      .sm-grid3x1
        .images-wrapper
          width 48.10%
          float left

        .content-wrapper
          width 51.90%
          float left
          padding 2% 3%

          h3
            margin-bottom .8em

          .info-intro
            margin-bottom .2em

  #flow02
    .list-content
      h3
        font-size 1.9em

      ul
        margin 1.8em 0 0
        li a
          font-size 1.1em

      .more
        font-size 1.1em
        margin-top 2em

    .note-pic
      position relative
      &:after
        position absolute
        content ' '
        width 0px
        height 0px
        right 0
        top 30px
        border-width 14px 13px
        border-style solid
        border-color transparent #fff transparent transparent

    .grid2x1
      padding-bottom 46%

  .grid-module .cont-wrapper
    font-size 0.9em !important

  #flow01 #service-grid
    font-size .8em

  .banner
    width 100%
    height 310px
    background-repeat no-repeat
    background-position center top
    background-size cover